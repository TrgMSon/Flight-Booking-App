<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="1080" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.controllers.ChooseFlightController">

    <VBox alignment="CENTER" prefWidth="1000" spacing="15" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">

        <!-- Tiêu đề -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2b5797;" text="Danh sách chuyến bay khả dụng" />

        <!-- Bảng danh sách chuyến bay -->
        <TableView fx:id="flightTable" prefHeight="380" prefWidth="1000" style="-fx-font-size: 15px">
            <columns>
                <TableColumn fx:id="colDeparture" prefWidth="130" text="Điểm đi" />
                <TableColumn fx:id="colDestination" prefWidth="130" text="Điểm đến" />
                <TableColumn fx:id="colDepartureTime" prefWidth="180" text="Thời gian đi" />
                <TableColumn fx:id="colArrivalTime" prefWidth="180" text="Thời gian đến" />
                <TableColumn fx:id="colDuration" prefWidth="130" text="Thời lượng bay" />
                <TableColumn fx:id="colPrice" prefWidth="110" text="Giá vé (VND)" />
                <TableColumn fx:id="colSeats" prefWidth="100" text="Ghế trống" />
                <TableColumn fx:id="colAction" prefWidth="100" text="Hành động" />
            </columns>
        </TableView>

        <!-- Hàng nút chức năng -->
        <HBox alignment="CENTER" spacing="20">

            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            
            <Button fx:id="btnBack" onAction="#handleBack" prefHeight="36.0" prefWidth="120" text="Quay lại" />
        </HBox>
    </VBox>
</AnchorPane>
